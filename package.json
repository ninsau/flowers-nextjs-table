{
  "name": "flowers-nextjs-table",
  "version": "1.0.3",
  "description": "A headless, highly customizable, and performant table component for Next.js and React applications.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles": "./dist/table.css"
  },
  "scripts": {
    "build": "tsup && tailwindcss -i ./src/styles/table.css -o ./dist/table.css --minify",
    "dev": "tsup --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .ts,.tsx",
    "prepublishOnly": "npm run build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ninsau/flowers-nextjs-table.git"
  },
  "keywords": [
    "react",
    "nextjs",
    "table",
    "headless",
    "typescript",
    "tailwind",
    "component",
    "data-table",
    "data-grid"
  ],
  "author": "ninsau",
  "license": "ISC",
  "dependencies": {
    "localforage": "^1.10.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": true
    }
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.1.4",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "postcss": "^8.4.38",
    "react-loading-skeleton": "^3.4.0",
    "size-limit": "^11.1.4",
    "tailwindcss": "^3.4.4",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5"
  },
  "size-limit": [
    {
      "path": "dist/index.mjs",
      "limit": "20 kB"
    },
    {
      "path": "dist/table.css",
      "limit": "5 kB"
    }
  ]
}
